<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.MiscellaneousPage"
    x:DataType="viewModels:MiscellaneousViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="{StaticResource PageMargin}"
            MaxWidth="{StaticResource PageMaxWidth}">
            <Grid ColumnDefinitions="* Auto">
                <TextBlock
                    Classes="h2"
                    Grid.Column="0"
                    Text="Miscellaneous" />
                <Button
                    Background="{DynamicResource GhostHoverColor}"
                    Classes="Icon"
                    Command="{Binding BackPageCommand}"
                    Grid.Column="1"
                    Height="28"
                    Width="28">
                    <Viewbox Margin="6">
                        <TextBlock Classes="LucideIcon" Text="&#57420;" />
                    </Viewbox>
                </Button>
            </Grid>
            <TextBlock
                Classes="p"
                Text="A collection of miscellaneous controls that don't fit into any specific category"
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                Margin="{StaticResource PageMargin}"
                MaxWidth="{StaticResource PageMaxWidth}"
                Spacing="32">
                <controls:ControlBlock Title="Busy Area" Xaml="{Binding BusyAreaCode}">
                    <Border
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource XlCornerRadius}"
                        Height="400">
                        <Panel Margin="1">
                            <Button
                                Classes="Outline"
                                Command="{Binding ToggleBusyCommand}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                Load
                            </Button>
                            <shadui:BusyArea CornerRadius="{DynamicResource LgCornerRadius}" IsBusy="{Binding IsBusy}" />
                        </Panel>
                    </Border>
                </controls:ControlBlock>
                <controls:ControlBlock
                    CSharp="{Binding ListBox.CSharpCode}"
                    Title="ListBox"
                    Xaml="{Binding ListBox.XamlCode}">
                    <ContentControl Content="{Binding ListBox}" />
                </controls:ControlBlock>
                <controls:ControlBlock Title="Skeleton" Xaml="{Binding SkeletonCode}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="24"
                        Orientation="Horizontal"
                        Spacing="16">
                        <shadui:Skeleton
                            CornerRadius="{DynamicResource FullCornerRadius}"
                            Height="64"
                            Width="64" />
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <shadui:Skeleton
                                Height="28"
                                HorizontalAlignment="Left"
                                Width="255" />
                            <shadui:Skeleton
                                Height="20"
                                HorizontalAlignment="Left"
                                Width="200" />
                        </StackPanel>
                    </StackPanel>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>