<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.Examples.ComboBox.FormComboBoxContent"
    x:DataType="comboBox:FormComboBoxViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:comboBox="clr-namespace:ShadUI.Demo.ViewModels.Examples.ComboBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <shadui:Card HasShadow="True" HorizontalAlignment="Center">
            <shadui:Card.Header>
                <shadui:CardTitle>Framework Form</shadui:CardTitle>
            </shadui:Card.Header>
            <StackPanel Spacing="16">
                <ComboBox
                    ItemsSource="{Binding Items}"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    Width="255"
                    shadui:ControlAssist.Hint="Your favorite web framework"
                    shadui:ControlAssist.Label="Select a framework" />
            </StackPanel>
            <shadui:Card.Footer>
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Classes="Outline"
                        Command="{Binding ClearCommand}"
                        HorizontalAlignment="Right">
                        Clear
                    </Button>
                    <Button
                        Classes="Primary"
                        Command="{Binding SubmitCommand}"
                        HorizontalAlignment="Right">
                        Submit
                    </Button>
                </StackPanel>
            </shadui:Card.Footer>
        </shadui:Card>
    </ScrollViewer>
</UserControl>