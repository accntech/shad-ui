<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.ToastPage"
    x:DataType="viewModels:ToastViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="{StaticResource PageMargin}"
            MaxWidth="{StaticResource PageMaxWidth}"
            Spacing="4">
            <Grid ColumnDefinitions="* Auto">
                <TextBlock Classes="h2" Text="Toast" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Background="{DynamicResource GhostHoverColor}"
                        Classes="Icon"
                        Command="{Binding BackPageCommand}"
                        Height="28"
                        Width="28">
                        <Viewbox Margin="6">
                            <TextBlock Classes="LucideIcon" Text="&#57420;" />
                        </Viewbox>
                    </Button>
                    <Button
                        Background="{DynamicResource GhostHoverColor}"
                        Classes="Icon"
                        Command="{Binding NextPageCommand}"
                        Height="28"
                        Width="28">
                        <Viewbox Margin="6">
                            <TextBlock Classes="LucideIcon" Text="&#57421;" />
                        </Viewbox>
                    </Button>
                </StackPanel>
            </Grid>
            <TextBlock
                Classes="p"
                Text="A succinct message that is displayed temporarily."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                Margin="{StaticResource PageMargin}"
                MaxWidth="{StaticResource PageMaxWidth}"
                Spacing="32">
                <StackPanel Orientation="Vertical" Spacing="8">
                    <TextBlock Classes="h4" Text="Installation" />
                    <Separator Margin="0" />
                    <TextBlock
                        Classes="Small"
                        Text="Place ToastHost to any part of the application, preferably in main content of the MainWindow and should be on top of other elements."
                        TextWrapping="Wrap" />
                    <controls:CodeTextBlock>
                        <Run Text="    &lt;!-- rest of the codes --&gt;" />
                        <LineBreak />
                        <Run Text="    &lt;toasts:ToastHost Manager=&quot;{Binding ToastManager}&quot; /&gt;" />
                    </controls:CodeTextBlock>
                    <TextBlock
                        Classes="Small"
                        Margin="0,12,0,0"
                        Text="Resolve ToastManager using dependency injection framework for easy access. Make sure to have only one instance of ToastManager."
                        TextWrapping="Wrap" />
                    <controls:CodeTextBlock Language="cs">
                        <Run Text="public static void AddServices(this IServiceCollection collection)" />
                        <LineBreak />
                        <Run Text="\{" />
                        <LineBreak />
                        <Run Text="    //...other service injection" />
                        <LineBreak />
                        <Run Text="    " />
                        <LineBreak />
                        <Run Text="    collection.AddSingleton&lt;ToastManager&gt;();" />
                        <LineBreak />
                        <Run Text="}" />
                    </controls:CodeTextBlock>
                </StackPanel>
                <controls:ControlBlock CSharp="{Binding SimpleToastCode}" Title="Simple">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowSimpleToastCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding WithTitleToastCode}" Title="With Title">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowToastWithTitleCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding WithActionToastCode}" Title="With Action">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowToastWithActionCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding WithDelayToastCode}" Title="With Custom Delay">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowToastWithDelayCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding InfoToastCode}" Title="Info Toast">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowInfoToastCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding SuccessToastCode}" Title="Success Toast">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowSuccessToastCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding WarningToastCode}" Title="Warning Toast">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowWarningToastCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding ErrorToastCode}" Title="Error Toast">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="Outline"
                            Command="{Binding ShowErrorToastCommand}"
                            Content="Show Toast"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock CSharp="{Binding DynamicToastCode}" Title="Dynamic Toast">
                    <shadui:Card HorizontalAlignment="Center">
                        <shadui:Card.Header>
                            <StackPanel>
                                <shadui:CardTitle>Notification</shadui:CardTitle>
                                <shadui:CardDescription>Send a notification to the client</shadui:CardDescription>
                            </StackPanel>
                        </shadui:Card.Header>
                        <ComboBox
                            ItemsSource="{Binding NotificationsCollection, Mode=OneWay}"
                            SelectedItem="{Binding SelectedNotification, Mode=TwoWay}"
                            Width="225"
                            shadui:ControlAssist.Label="Selected Notification" />
                        <shadui:Card.Footer>
                            <Button
                                Classes="Primary"
                                Command="{Binding ShowToastWithTypeCommand}"
                                Content="Submit"
                                HorizontalAlignment="Right" />
                        </shadui:Card.Footer>
                    </shadui:Card>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>